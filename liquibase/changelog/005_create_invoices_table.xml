<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog  
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"  
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="005_create_invoices_table" author="harsh">
    <createTable tableName="invoices">
      <column name="id" type="INT" autoIncrement="true">
         <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="invoice_number" type="INT">
         <constraints nullable="false" unique="true"/>
      </column>
      <column name="client_id" type="INT">
         <constraints nullable="false" foreignKeyName="fk_invoices_clients" references="clients(id)"/>
      </column>
      <column name="amount" type="INT">
         <constraints nullable="false"/>
      </column>
      <column name="due_on_date" type="DATE">
         <constraints nullable="false"/>
      </column>
      <column name="created_by" type="INT">
         <constraints nullable="false" foreignKeyName="fk_invoices_users" references="users(id)"/>
      </column>
      <column name="updated_at" type="DATETIME">
         <constraints nullable="false"/>
      </column>
      <column name="created_at" type="DATETIME">
         <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="005_add_default_due_on_date" author="harsh">
    <addDefaultValue 
         tableName="invoices" 
         columnName="due_on_date" 
         defaultValueComputed="CURRENT_DATE"/>
  </changeSet>

  <changeSet id="005_add_default_updated_at_invoices" author="harsh">
    <addDefaultValue 
         tableName="invoices" 
         columnName="updated_at" 
         defaultValueComputed="CURRENT_TIMESTAMP"/>
  </changeSet>

  <changeSet id="005_add_default_created_at_invoices" author="harsh">
    <addDefaultValue 
         tableName="invoices" 
         columnName="created_at" 
         defaultValueComputed="CURRENT_TIMESTAMP"/>
  </changeSet>
</databaseChangeLog>
