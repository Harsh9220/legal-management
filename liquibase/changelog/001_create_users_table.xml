<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"  
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="001_create_users_table" author="harsh">
    <createTable tableName="users">
      <column name="id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="username" type="VARCHAR(100)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="VARCHAR(100)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="hashed_password" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="mobile" type="VARCHAR(20)"/>
      <column name="address" type="VARCHAR(255)"/>
      <!-- ENUM for role -->
      <column name="role" type="ENUM('lawyer','staff','admin','client')">
        <constraints nullable="false"/>
      </column>
      <column name="is_blocked" type="BOOLEAN" defaultValueBoolean="false"/>
      <column name="is_deleted" type="BOOLEAN" defaultValueBoolean="false"/>
      <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
