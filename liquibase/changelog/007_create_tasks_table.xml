<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog  
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"  
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="007_create_tasks_table" author="harsh">
    <createTable tableName="tasks">
      <column name="id" type="INT" autoIncrement="true">
         <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="task_name" type="VARCHAR(255)">
         <constraints nullable="false"/>
      </column>
      <column name="due_date" type="DATE">
         <constraints nullable="false"/>
      </column>
      <column name="priority" type="ENUM('high','medium','low')">
         <constraints nullable="false"/>
      </column>
      <column name="assign_to_staff" type="INT">
         <constraints nullable="true" foreignKeyName="fk_tasks_users" references="users(id)"/>
      </column>
      <column name="status" type="ENUM('complete','need review','incomplete')" defaultValue="incomplete">
         <constraints nullable="false"/>
      </column>
      <column name="case_id" type="INT">
         <constraints nullable="false" foreignKeyName="fk_tasks_cases" references="cases(id)"/>
      </column>
      <column name="created_by" type="INT">
         <constraints nullable="false" foreignKeyName="fk_tasks_users_created" references="users(id)"/>
      </column>
      <column name="updated_at" type="DATETIME">
         <constraints nullable="false"/>
      </column>
      <column name="created_at" type="DATETIME">
         <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="007_add_default_due_date" author="harsh">
    <addDefaultValue 
         tableName="tasks" 
         columnName="due_date" 
         defaultValueComputed="CURRENT_DATE"/>
  </changeSet>

  <changeSet id="007_add_default_updated_at_tasks" author="harsh">
    <addDefaultValue 
         tableName="tasks" 
         columnName="updated_at" 
         defaultValueComputed="CURRENT_TIMESTAMP"/>
  </changeSet>

  <changeSet id="007_add_default_created_at_tasks" author="harsh">
    <addDefaultValue 
         tableName="tasks" 
         columnName="created_at" 
         defaultValueComputed="CURRENT_TIMESTAMP"/>
  </changeSet>
</databaseChangeLog>
