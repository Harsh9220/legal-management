<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog  
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"  
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- 004-1: Create Sessions Table without inline defaults -->
  <changeSet id="004_create_sessions_table" author="harsh">
    <createTable tableName="sessions">
      <column name="id" type="INT" autoIncrement="true">
         <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="case_id" type="INT">
         <constraints nullable="false" foreignKeyName="fk_sessions_cases" references="cases(id)"/>
      </column>
      <column name="result" type="VARCHAR(100)">
         <constraints nullable="false"/>
      </column>
      <column name="session_date" type="DATE">
         <constraints nullable="false"/>
      </column>
      <column name="court_type" type="VARCHAR(100)">
         <constraints nullable="false"/>
      </column>
      <column name="created_at" type="DATETIME">
         <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <!-- 004-2: Add default for session_date -->
  <changeSet id="004_add_default_session_date" author="harsh">
    <addDefaultValue 
         tableName="sessions" 
         columnName="session_date" 
         defaultValueComputed="CURRENT_DATE"/>
  </changeSet>

  <!-- 004-3: Add default for created_at -->
  <changeSet id="004_add_default_created_at_sessions" author="harsh">
    <addDefaultValue 
         tableName="sessions" 
         columnName="created_at" 
         defaultValueComputed="CURRENT_TIMESTAMP"/>
  </changeSet>
</databaseChangeLog>
